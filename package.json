{
  "name": "tellthem",
  "description": "Simple driver based bus implementation",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.11.1"
  },
  "main": "main/index.js",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "del-cli build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "prepublishOnly": "npm run build",
    "release": "npx release-it",
    "test": "c8 node --loader ts-node/esm --enable-source-maps bin/test.ts",
    "quick:test": "node --loader ts-node/esm --enable-source-maps bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@japa/assert": "^3.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.5.22",
    "@testcontainers/hivemq": "^10.9.0",
    "@testcontainers/redis": "^10.9.0",
    "@types/amqplib": "^0.10.5",
    "@types/node": "^20.12.13",
    "@vinejs/vine": "^2.0.0",
    "amqplib": "^0.10.4",
    "c8": "^9.1.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.3.0",
    "ioredis": "^5.4.1",
    "mqtt": "^5.7.0",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0",
    "testcontainers": "^10.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@poppinss/utils": "^6.7.3"
  },
  "peerDependencies": {
    "amqplib": ">=0.10.0",
    "ioredis": ">=5.0.0",
    "mqtt": ">=5.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "amqplib": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "mqtt": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "author": "tom-brulin",
  "license": "MIT",
  "keywords": [
    "bus",
    "event",
    "pubsub",
    "message",
    "queue"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
